{
  "name": "filedrop-ws",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/dotenv-flow": "^3.0.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^12.12.31",
    "@types/randomcolor": "^0.5.4",
    "@types/uuid": "^7.0.2",
    "@types/ws": "^7.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "dotenv-flow": "^3.1.0",
    "eslint": "^7.1.0",
    "husky": "^4.2.3",
    "jest": "^25.2.4",
    "lint-staged": "^10.0.9",
    "prettier": "^2.0.2",
    "randomcolor": "^0.5.4",
    "ts-jest": "^25.3.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3",
    "uuid": "^7.0.2",
    "ws": "^7.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpileOnly src/index.ts",
    "lint": "eslint src"
  }
}
