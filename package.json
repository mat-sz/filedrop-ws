{
  "name": "filedrop-ws",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.35",
    "@types/uuid": "^8.3.4",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "dotenv-flow": "^3.2.0",
    "eslint": "^8.15.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "joi": "^17.6.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2",
    "ws": "^8.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "__tests__/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc",
    "test": "jest",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint src"
  }
}
